<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="methods" thread-count="5" verbose="2">

    <listeners>
        <listener class-name="org.automation.listeners.TestListener"/>
        <listener class-name="org.automation.listeners.ApiReportListener"/>
    </listeners>

    <test name="JsonPlaceholder API Tests">
        <classes>
            <class name="org.automation.api.JsonPlaceholderTests"/>
        </classes>
    </test>

    <test name="Additional API Tests">
        <packages>
            <package name="org.automation.api.*"/>
        </packages>
    </test>
</suite>
