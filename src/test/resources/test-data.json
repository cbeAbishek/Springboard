{
  "reqResAPI": {
    "testScenarios": [
      {
        "scenarioName": "UserCRUDOperations",
        "endpoints": [
          {
            "operation": "CREATE",
            "method": "POST",
            "endpoint": "/api/users",
            "requestData": {
              "name": "John Doe",
              "job": "QA Engineer"
            },
            "expectedResponse": {
              "statusCode": 201,
              "requiredFields": ["name", "job", "id", "createdAt"]
            }
          },
          {
            "operation": "READ",
            "method": "GET",
            "endpoint": "/api/users/2",
            "expectedResponse": {
              "statusCode": 200,
              "requiredFields": ["data.id", "data.email", "data.first_name", "data.last_name", "data.avatar"]
            }
          },
          {
            "operation": "UPDATE",
            "method": "PUT",
            "endpoint": "/api/users/2",
            "requestData": {
              "name": "Jane Smith",
              "job": "Senior QA Engineer"
            },
            "expectedResponse": {
              "statusCode": 200,
              "requiredFields": ["name", "job", "updatedAt"]
            }
          },
          {
            "operation": "DELETE",
            "method": "DELETE",
            "endpoint": "/api/users/2",
            "expectedResponse": {
              "statusCode": 204
            }
          }
        ]
      },
      {
        "scenarioName": "AuthenticationFlow",
        "endpoints": [
          {
            "operation": "REGISTER_SUCCESS",
            "method": "POST",
            "endpoint": "/api/register",
            "requestData": {
              "email": "eve.holt@reqres.in",
              "password": "pistol"
            },
            "expectedResponse": {
              "statusCode": 200,
              "requiredFields": ["id", "token"]
            }
          },
          {
            "operation": "REGISTER_FAILURE",
            "method": "POST",
            "endpoint": "/api/register",
            "requestData": {
              "email": "sydney@fife"
            },
            "expectedResponse": {
              "statusCode": 400,
              "errorMessage": "Missing password"
            }
          },
          {
            "operation": "LOGIN_SUCCESS",
            "method": "POST",
            "endpoint": "/api/login",
            "requestData": {
              "email": "eve.holt@reqres.in",
              "password": "cityslicka"
            },
            "expectedResponse": {
              "statusCode": 200,
              "requiredFields": ["token"]
            }
          },
          {
            "operation": "LOGIN_FAILURE",
            "method": "POST",
            "endpoint": "/api/login",
            "requestData": {
              "email": "peter@klaven"
            },
            "expectedResponse": {
              "statusCode": 400,
              "errorMessage": "Missing password"
            }
          }
        ]
      }
    ],
    "validationData": {
      "baseUrl": "https://reqres.in/api",
      "expectedResponseTime": 5000,
      "userFields": ["id", "email", "first_name", "last_name", "avatar"],
      "resourceFields": ["id", "name", "year", "color", "pantone_value"],
      "paginationFields": ["page", "per_page", "total", "total_pages", "data"]
    }
  },
  "frameworkValidation": {
    "testExecutionMetrics": {
      "expectedParallelThreads": 5,
      "maxExecutionTimeMinutes": 30,
      "minimumSuccessRate": 80,
      "retryAttempts": 2
    },
    "reportingValidation": {
      "requiredReportTypes": ["HTML", "CSV", "XML"],
      "reportElements": {
        "HTML": ["test-summary", "charts", "detailed-logs", "screenshots"],
        "CSV": ["test-name", "status", "duration", "error-message"],
        "XML": ["testcase", "failure", "error", "skipped"]
      }
    },
    "databaseValidation": {
      "requiredTables": [
        "test_batches",
        "test_cases",
        "test_executions",
        "test_schedules",
        "test_reports",
        "test_screenshots",
        "test_logs"
      ],
      "requiredIndexes": [
        "idx_batch_id",
        "idx_status",
        "idx_created_at",
        "idx_test_case_id",
        "idx_execution_id"
      ]
    }
  },
  "performanceBaselines": {
    "uiTests": {
      "avgExecutionTimeSeconds": 45,
      "maxExecutionTimeSeconds": 120,
      "screenshotCaptureTimeMs": 500
    },
    "apiTests": {
      "avgResponseTimeMs": 1000,
      "maxResponseTimeMs": 5000,
      "delayedResponseMinMs": 3000
    },
    "reportGeneration": {
      "htmlReportMaxTimeSeconds": 30,
      "csvReportMaxTimeSeconds": 10,
      "xmlReportMaxTimeSeconds": 15
    }
  }
}
