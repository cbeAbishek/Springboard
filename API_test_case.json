{
  "tests": [
    {
      "name": "API - GET Request",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "Simple GET",
            "method": "GET",
            "url": "https://httpbin.org/get",
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - POST JSON Data",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "POST with JSON body",
            "method": "POST",
            "url": "https://httpbin.org/post",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "testId": "12345",
              "status": "pending"
            },
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - PUT Request",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "PUT to update resource",
            "method": "PUT",
            "url": "https://httpbin.org/put",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "resourceId": "res-987",
              "value": "updated"
            },
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - DELETE Request",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "DELETE a resource",
            "method": "DELETE",
            "url": "https://httpbin.org/delete",
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - Set Custom Headers",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "GET with custom headers",
            "method": "GET",
            "url": "https://httpbin.org/headers",
            "headers": {
              "X-Request-ID": "abc-123-xyz",
              "X-Client-Version": "2.1.0"
            },
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - Basic Authentication",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "GET with basic auth",
            "method": "GET",
            "url": "https://httpbin.org/basic-auth/user/passwd",
            "headers": {
              "Authorization": "Basic dXNlcjpwYXNzd2Q="
            },
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - Bearer Token Auth",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "GET with bearer token",
            "method": "GET",
            "url": "https://httpbin.org/bearer",
            "headers": {
              "Authorization": "Bearer my-secret-token"
            },
            "expectedStatus": 200
          }
        ]
      }
    },
    {
      "name": "API - Expect 404 Not Found",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "Request non-existent resource",
            "method": "GET",
            "url": "https://httpbin.org/status/404",
            "expectedStatus": 404
          }
        ]
      }
    },
    {
      "name": "API - Expect 403 Forbidden",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "Request forbidden resource",
            "method": "GET",
            "url": "https://httpbin.org/status/403",
            "expectedStatus": 403
          }
        ]
      }
    },
    {
      "name": "API - Redirect Handling",
      "type": "API",
      "definition": {
        "requests": [
          {
            "name": "Follow a 302 redirect",
            "method": "GET",
            "url": "https://httpbin.org/redirect/1",
            "expectedStatus": 200
          }
        ]
      }
    }
  ]
}
